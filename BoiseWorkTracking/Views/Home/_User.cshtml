@(Html.Kendo().Grid<BoiseWorkTracking.Models.ViewModels.UserViewModel>()
          .Name("User")
          .Columns(columns =>
          {
              columns.Bound(c => c.Name);
              columns.Command(command => { command.Edit(); command.Destroy(); }).Width(240);
          })
          .ToolBar(toolbar =>
          {
              toolbar.Create();
          })
          .Editable(editable => editable.Mode(GridEditMode.PopUp))
          .Scrollable()
          .DataSource(dataSource => dataSource
              .Ajax()
              .Model(model => model.Id(p => p.UserID))
              .Read(read => read.Action("Users_Read", "User"))
              .Create(create => create.Action("Users_Create", "User"))
              .Update(update => update.Action("Users_Update", "User"))
              .Destroy(destroy => destroy.Action("Users_Destroy", "User"))
          )
)

